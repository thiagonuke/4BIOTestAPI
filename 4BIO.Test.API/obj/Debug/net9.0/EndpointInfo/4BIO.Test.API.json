{
  "openapi": "3.0.4",
  "info": {
    "title": "API 4BIO TESTE",
    "description": "API para teste técnico 4bio",
    "version": "v1"
  },
  "paths": {
    "/cliente/criar": {
      "post": {
        "tags": [
          "Clientes"
        ],
        "summary": "Cria um novo cliente",
        "description": "Endpoint responsável por registrar um novo cliente no sistema. Valida os dados obrigatórios (Nome, Email, CPF, RG e contatos).",
        "operationId": "CriarCliente",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientCreateCommand"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientCreateResponse"
                }
              }
            }
          }
        }
      }
    },
    "/cliente/listar": {
      "get": {
        "tags": [
          "Clientes"
        ],
        "summary": "Lista clientes cadastrados",
        "description": "Retorna uma lista de clientes filtrada por nome, email ou CPF. Se nenhum filtro for informado, retorna todos os clientes cadastrados.",
        "operationId": "ListarClientes",
        "parameters": [
          {
            "name": "nome",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "email",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "cpf",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientReadResponse"
                }
              }
            }
          }
        }
      }
    },
    "/cliente/remover/{cpf}": {
      "delete": {
        "tags": [
          "Clientes"
        ],
        "summary": "Remove um cliente pelo CPF",
        "description": "Remove o cliente cujo CPF for informado na rota. Caso o CPF não exista, retorna uma mensagem de erro.",
        "operationId": "RemoverCliente",
        "parameters": [
          {
            "name": "cpf",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientDeleteResponse"
                }
              }
            }
          }
        }
      }
    },
    "/cliente/atualizar/{cpf}": {
      "put": {
        "tags": [
          "Clientes"
        ],
        "summary": "Atualiza dados de um cliente",
        "description": "Atualiza as informações de um cliente existente com base no CPF informado. O corpo da requisição deve conter os novos dados do cliente.",
        "operationId": "AtualizarCliente",
        "parameters": [
          {
            "name": "cpf",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ClientUpdateCommand"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientUpdateResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ClientCreateCommand": {
        "type": "object",
        "properties": {
          "cliente": {
            "$ref": "#/components/schemas/ClientDto"
          }
        },
        "additionalProperties": false
      },
      "ClientCreateResponse": {
        "type": "object",
        "properties": {
          "cliente": {
            "$ref": "#/components/schemas/ClientDto"
          }
        },
        "additionalProperties": false
      },
      "ClientDeleteResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ClientDto": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "cpf": {
            "type": "string",
            "nullable": true
          },
          "rg": {
            "type": "string",
            "nullable": true
          },
          "contatos": {
            "$ref": "#/components/schemas/ContatoDto"
          },
          "enderecos": {
            "$ref": "#/components/schemas/EnderecoDto"
          }
        },
        "additionalProperties": false
      },
      "ClientReadResponse": {
        "type": "object",
        "properties": {
          "clientes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ClientDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ClientUpdateCommand": {
        "type": "object",
        "properties": {
          "cliente": {
            "$ref": "#/components/schemas/ClientDto"
          }
        },
        "additionalProperties": false
      },
      "ClientUpdateResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "nullable": true
          },
          "success": {
            "type": "boolean"
          },
          "client": {
            "$ref": "#/components/schemas/ClientDto"
          }
        },
        "additionalProperties": false
      },
      "ContatoDto": {
        "type": "object",
        "properties": {
          "tipo": {
            "type": "string",
            "nullable": true
          },
          "ddd": {
            "type": "integer",
            "format": "int32"
          },
          "telefone": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "EnderecoDto": {
        "type": "object",
        "properties": {
          "tipo": {
            "type": "string",
            "nullable": true
          },
          "cep": {
            "type": "string",
            "nullable": true
          },
          "logradouro": {
            "type": "string",
            "nullable": true
          },
          "numero": {
            "type": "integer",
            "format": "int32"
          },
          "bairro": {
            "type": "string",
            "nullable": true
          },
          "complemento": {
            "type": "string",
            "nullable": true
          },
          "cidade": {
            "type": "string",
            "nullable": true
          },
          "estado": {
            "type": "string",
            "nullable": true
          },
          "referencia": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}